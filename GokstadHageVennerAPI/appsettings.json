{
  "ConnectionStrings": {

    "DefaultConnection": "Server=localhost;Database=ga_hagevenner; User ID=ga-app;Password=ga-5ecret-%;"

  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "True",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "connectionString": "Server=localhost;Database=ga_hagevenner; User ID=ga-app;Password=ga-5ecret-%;",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]

  },

  "AllowedHosts": "*"
}
